CompoudAssignmentOperator: ast::BinOp<'a> = {
    "*=" => ast::BinOp { kind: ast::BinOpKind::Multiply, token: <> },
    "/=" => ast::BinOp { kind: ast::BinOpKind::Divide, token: <> },
    "%=" => ast::BinOp { kind: ast::BinOpKind::Modulo, token: <> },
