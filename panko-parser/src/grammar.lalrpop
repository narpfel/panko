TypeName: crate::ast::QualifiedType<'a> = {
    <specifier_qualifier_list:SpecifierQualifierList> <abstract_declarator:AbstractDeclarator?> => {
        // TODO: assert that `storage_class` and `function_specifiers` are `None`
        let crate::ast::DeclarationSpecifiers { storage_class: _, function_specifiers: _, ty }
            = crate::ast::parse_declaration_specifiers(sess, specifier_qualifier_list);
        match abstract_declarator {
            None => ty,
            Some(abstract_declarator) => {
                let (ty, name) = crate::ast::parse_declarator(sess, ty, abstract_declarator, IsParameter::No);
                assert!(name.is_none());
                ty
            },
        }
    },
}

